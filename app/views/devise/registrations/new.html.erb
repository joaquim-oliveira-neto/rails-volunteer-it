<div class="container">
  <section id='user'>
    <div class="col-xs-6 col-xs-offset-3">
      <h3 class = "text-center">Cadastro</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <%= hidden_field_tag "redirect_to", params[:redirect_to] %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", class: 'yourcustomclass' %>
          <%= f.input :password, required: true, label: false, placeholder: "Senha", hint: ("No mÃ­nimo #{@minimum_password_length} caracteres." if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirme sua senha" %>
        </div>

        <!-- Button cadastrar -->
        <div class="form-actions text-center">
          <%= f.button :submit, "Cadastrar", class: "btn btn-primary" %>
        </div>
        <div class= "inline-line"><hr width= "35%"><p>ou continue com</p><hr width= "35%"></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
