<!-- Facebook Button -->
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook btn-block" do %>
      <i class="fa fa-facebook" aria-hidden="true"></i>
      Cadastre-se com <%= OmniAuth::Utils.camelize(provider) %>
    <% end %>
  <% end %>
<% end -%>

<hr>

<%- if controller_name != 'sessions' %>
  <%= link_to "Entrar", new_session_path(resource_name), class: "btn btn-primary" %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <span>Não possui uma conta?</span>
  <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "link" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name) %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebeu instruções para destravar?", new_unlock_path(resource_name) %>
<% end -%>

