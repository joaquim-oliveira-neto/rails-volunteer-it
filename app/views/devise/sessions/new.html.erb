<!-- Form for new User -->
<div class="wrapper">
  <section id='user'>
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <h3 class = "text-center">Entrar</h3>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
              <%= f.input :password, required: false, label: false, placeholder: "Senha" %>

              <div class="text-center">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "link" %>
                <% end -%>

                <%= f.input :remember_me, as: :boolean, inline_label: "Lembrar de mim" if devise_mapping.rememberable? %>
              </div>
            </div>

            <!-- Button Log In -->
            <div class="form-actions text-center">
              <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>

        <!-- Other Links -->
        <div class="col-xs-6 col-xs-offset-3">
          <div class="text-center">

            <hr>
            <!-- Facebook Button -->
            <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook btn-block" do %>
                  <i class="fa fa-facebook" aria-hidden="true"></i>
                  Entrar com <%= OmniAuth::Utils.camelize(provider) %>
                <% end %>
              <% end %>
            <% end -%>
            <hr>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
