<div class="navbar-volunteer">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-volunteer-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-volunteer-right hidden-xs hidden-sm">

    <!-- TO-DO: Add link -->
    <a href="" class="navbar-volunteer-item navbar-volunteer-link">Help</a>

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "My Projects", volunteer_or_ngo_path(current_user), class: "navbar-volunteer-item navbar-volunteer-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-volunteer-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-volunteer-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-volunteer-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <a href="/ngos/new" class="navbar-volunteer-item navbar-volunteer-link">Add your NGO</a>
      <%= link_to "Be a volunteer", new_user_registration_path(redirect_to: new_volunteer_path), class: "navbar-volunteer-item navbar-volunteer-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-volunteer-item navbar-volunteer-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-volunteer-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-volunteer-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

