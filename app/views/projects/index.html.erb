
<div class="projects">
  <%= render 'layouts/banner-index' %>
   <div class="container">
    <div class="row">
      <% if @projects.empty? %>
          <p id = "default-message" class="text-center">Ainda não temos projetos com esse critérios. Encontre outra ONG incrível realizando uma nova busca</p>
      <% else %>
        <% @projects.each do |project| %>
            <div class="card-project col-xs-10 col-xs-offset-1">
              <%= render 'layouts/card-project', project: project  %>
            </div>
        <% end %>
     <%end%>
    </div>
  </div>
</div>

<div id="map" style="width: 100%; height: 400px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
